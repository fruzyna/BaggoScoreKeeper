<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mail929.android.baggoscorekeeper" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".BaggoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewGameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".InGameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ExistingGamesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ViewGamesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ViewGameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
